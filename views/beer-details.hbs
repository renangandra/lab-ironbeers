<div>
    {{#each beer}}
        <div class="beer">
            {{>beerpartial this}}
            <div class="beer-inner">
                <p>First brewed: {{this.first_brewed}}</p>
                <p>Attenuation level: {{this.attenuation_level}}</p>
                <p>Recommended food pairing:</p>
                <ul>
                    {{#each this.food_pairing}}
                        <li> {{this}}</li>
                    {{/each}}
                </ul>
            </div>
        </div>
    {{/each}}
    <div>
        <a href="/beers">Go back to beers list</a>
    </div>
</div>